generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "sqlite"
	url      = env("DATABASE_URL")
}

model User {
	username String @id
	password String
	characters Character[]
}

model Character {
	user User @relation(fields: [username], references: [username])
	username String
	@@id([username, name], name: "identifier")
	
	name String
	power Float @default(0)
}